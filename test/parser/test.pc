<div id="edit-student-name-modal">
  <div class="modal-header">
    <button type="button" data-dismiss="modal" data-bind="{{onClick:remove()}}" class="close">Ã—</button>
    <h3 class="modal-title">{{ "dojo.teacher_web:add_edit_class_view.edit_student" | t({name: ~model.fullName}) | ellipsis(25)}}</h3>
  </div>

  <div class="modal-body">

    <div>
      {{ "dojo.teacher_web:add_edit_class_view.edit_student_line0" | t() }}
      <br/>
      {{#if: hasConnections}}
          {{ "dojo.teacher_web:add_edit_class_view.edit_student_line1" | t() }}
          <br/>
          <br/>
          <ul>
            {{ html: ~sections.otherClasses }}
            {{#if: hasParents }}
              <li>{{ "dojo.teacher_web:add_edit_class_view.num_connected_parents" | t({name: ~model.fullName}) }}</li>
            {{/}}
            {{#if: hasPstudent }}
              <li>{{ "dojo.teacher_web:add_edit_class_view.student_account" | t({name: ~model.fullName}) }}</li>
            {{/}}
          </ul>
          <br/>
      {{/}}
    {{ "dojo.teacher_web:add_edit_class_view.edit_student_line2" | t() }}
    <br/>
    <br/>
    </div>

    <input type="text" class="form-control" data-bind="{{ model: <~>model.fullName, onEnter: saveAndClose() }}"></input>
  </div>


  <div class="modal-footer">

    <a href="#" class="remove-student-button pull-left" data-bind="{{ 
      onClick: null,
      popover: {
        trigger: 'click',
        html: 'true',
        placement: 'bottom',
        content: sections.removeStudent
      }
    }}">{{ "dojo.teacher_web:add_edit_class_view.remove_from_class" | t() }}</a>

    <button
        data-bind="{{ onClick: saveAndClose() }}"
        class="btn btn-blue save-student-name-button"
        name="save_class_b">
      {{ "dojo.teacher_web:add_students_modal.save" | t() }}
    </button>

  </div>
</div>